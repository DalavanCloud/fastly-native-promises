{
  "name": "fastly-promises",
  "version": "0.0.0-semantically-released",
  "description": "Promise based Fastly API client for Node.js",
  "main": "src/index.js",
  "scripts": {
    "commit": "npm run docs && git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "nyc --reporter=text --reporter=lcov --check-coverage --statements 100 --lines 100 mocha",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter",
    "docs": "jsdoc2md --files src/index.js -t README.md.hbs -d 3 > README.md",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philippschulte/fastly-promises.git"
  },
  "keywords": [
    "fastly",
    "promises",
    "api",
    "client",
    "cdn"
  ],
  "author": "Philipp Schulte <philipp.schulte@ymail.com> (http://www.philippschulte.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/philippschulte/fastly-promises/issues"
  },
  "homepage": "https://github.com/philippschulte/fastly-promises#readme",
  "engines": {
    "node": ">=7.6.0"
  },
  "devDependencies": {
    "codecov": "^3.0.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-header": "^2.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "istanbul": "^1.1.0-alpha.1",
    "junit-report-builder": "^1.3.1",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.17.0",
    "mocha-parallel-tests": "^2.0.3",
    "nyc": "^13.0.1",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "expect": "1.20.2",
    "ghooks": "2.0.0",
    "jsdoc-to-markdown": "^4.0.1",
    "nock": "9.1.6",
    "semantic-release": "^6.3.6"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
