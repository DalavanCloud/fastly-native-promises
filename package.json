{
  "name": "fastly-promises",
  "version": "0.0.0-semantically-released",
  "description": "Promise based Fastly API client for Node.js",
  "main": "src/index.js",
  "scripts": {
    "commit": "npm run docs && git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "istanbul cover _mocha test",
    "docs": "jsdoc2md --files src/index.js -t README.md.hbs -d 3 > README.md",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philippschulte/fastly-promises.git"
  },
  "keywords": [
    "fastly",
    "promises",
    "api",
    "client",
    "cdn"
  ],
  "author": "Philipp Schulte <philipp.schulte@ymail.com> (http://www.philippschulte.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/philippschulte/fastly-promises/issues"
  },
  "homepage": "https://github.com/philippschulte/fastly-promises#readme",
  "engines": {
    "node": ">=7.6.0"
  },
  "devDependencies": {
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "expect": "1.20.2",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "3.5.0",
    "nock": "9.1.6",
    "semantic-release": "^6.3.6"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
